#!/bin/sh
. "${srcdir=.}/init.sh"; path_prepend_ . ../src

# Test of Tcl support: escape sequences.

cat <<\EOF > xg-t-4.tcl
puts [_ "Hello\u200e\u201cWorld\u201d"]
puts [_ "x\u20y\x20z"]
puts [_ "\xFF20"]
puts [_ "\UFF20"]
puts [_ "\uD83D\udc1c"]
# Does not work yet in Tcl 8.6:
# puts [_ "\U0001F41C"]
EOF

: ${XGETTEXT=xgettext}
${XGETTEXT} --add-comments --no-location -k_ -o xg-t-4.tmp xg-t-4.tcl 2>xg-t-4.err
result=$?
cat xg-t-4.err
test $result = 0 || Exit 1
func_filter_POT_Creation_Date xg-t-4.tmp xg-t-4.pot

cat <<\EOF > xg-t-4.ok
# SOME DESCRIPTIVE TITLE.
# Copyright (C) YEAR THE PACKAGE'S COPYRIGHT HOLDER
# This file is distributed under the same license as the PACKAGE package.
# FIRST AUTHOR <EMAIL@ADDRESS>, YEAR.
#
#, fuzzy
msgid ""
msgstr ""
"Project-Id-Version: PACKAGE VERSION\n"
"Report-Msgid-Bugs-To: \n"
"PO-Revision-Date: YEAR-MO-DA HO:MI+ZONE\n"
"Last-Translator: FULL NAME <EMAIL@ADDRESS>\n"
"Language-Team: LANGUAGE <LL@li.org>\n"
"Language: \n"
"MIME-Version: 1.0\n"
"Content-Type: text/plain; charset=UTF-8\n"
"Content-Transfer-Encoding: 8bit\n"

msgid "Hello‚Äé‚ÄúWorld‚Äù"
msgstr ""

msgid "x y z"
msgstr ""

msgid "√ø20"
msgstr ""

msgid "Ôº†"
msgstr ""

msgid "üêú"
msgstr ""
EOF

: ${DIFF=diff}
${DIFF} xg-t-4.ok xg-t-4.pot
result=$?

exit $result
